{% extends 'base.html.twig' %}

{% block title %}Liste des categories{% endblock %}

{% block body %}

    <h1>Categories</h1>
    <h2><a href="{{path("app_category_add")}}">Cr√©er une categorie</a></h2>
    <table>
        <thead>
            <tr>
                <th>id</th>
                <th>name</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            {% for category in categories %}
                <tr>
                    <td>{{category.id}}</td>
                    <td>{{category.name}}</td>
                    <td><a href="{{path("app_category_update", {"id" : category.id})}}">Modifier</a></td>
                </tr>        
            {% endfor %}
        </tbody> 
    </table>
{% endblock %}
