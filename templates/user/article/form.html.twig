{% extends 'base.html.twig' %}

{% block title %}Hello CityController!{% endblock %}

{% block body %}
<div data-controller="hello" data-hello-count="{{articleForm.images|length}}">
    {{ form_start(articleForm) }}
        {{ form_widget(articleForm) }}
        <h3>Images</h3>
        <ul class="images">
            {% for image in article.images %}

                <li><img src="{{asset("upload/article/" ~ image.image)}} " alt="" height="200"></li>
            {% endfor %}
        </ul>
        <div data-hello-target="output">
        </div>
        <button type="button" class="add_item_link" data-action="click->hello#addImage">Add a image</button> <br>
        <button type="submit" class="btn">Valider</button>
    {{ form_end(articleForm) }}
</div>

{% endblock %}